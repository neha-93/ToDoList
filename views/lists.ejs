
<%- include("header") -%>

    <div class="box" id="heading">
      <h1><%= listType %></h1>
    </div>

    <div class="box">

      <form class="" action="/delete" method="post">
        <% for(var i=0; i<itemList.length; i++){ %>
          <div class="item">
            <input type="checkbox" name="checkbox" class="item" value="<%= itemList[i]._id %>" onChange=this.form.submit()>
            <p><%= itemList[i].name %></p>
          </div>
          <% } %>
          <input type="hidden" name="typeOfList" value="<%= listType %>">
      </form>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value="<%= listType %>">+</button>
    </form>
    </div>

<%- include("footer") -%>
